#:kivy 1.0

<ToDoItemView>:
    orientation: 'horizontal'

    size_hint: (1, None)
    height: 100

    canvas.before:
        Color:
            rgba: (0.8, 0.8, 0.8, 1)

        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        size_hint: (0.3, 1)

        Label:
            text: "X"

            size_hint: (None, None)
            size: (29, 29)

            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            canvas.before:
                Color:
                    rgba: (0.9, 0.6, 0.6, 1)

                Rectangle:
                    size: self.size
                    pos: self.pos

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "<to do task title>"
            halign: 'left'
            text_size: self.size
            font_size: '30sp'
            color: (0, 0, 0, 1)
        Label:
            text: "<is completed?>"
            halign: 'right'
            text_size: self.size
            font_size: '15sp'
            color: (0, 0, 0, 1)



