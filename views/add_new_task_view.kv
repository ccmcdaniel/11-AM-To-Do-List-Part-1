#:kivy 1.0

<AddNewTaskView>:
    BoxLayout:
        orientation: 'vertical'

        HeaderBox:
            orientation: 'vertical'

            TitleLabel:
                text: "Add New Task View"

        BodyBox:
            orientation: 'vertical'

            TextInput:
                hint_text: 'Title'

            TextInput:
                hint_text: "Description"

        FooterBox:
            orientation: 'horizontal'

            Button:
                text: 'Save'
                on_press: app.root.current = "master_list"

            Button:
                text: 'Cancel'
                on_press: app.root.current = "master_list"
        