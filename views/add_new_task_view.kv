#:kivy 1.0

<AddNewTaskView>:
    BoxLayout:
        orientation: 'vertical'

        HeaderBox:
            orientation: 'vertical'

            TitleLabel:
                text: "Add New Task"

        BodyBox:
            orientation: 'vertical'

            TaskViewTitle:
                hint_text: 'Title'

            TaskViewDesc:
                hint_text: "Description"

            Widget:

        FooterBox:
            orientation: 'horizontal'

            SaveButton:
                text: 'Save'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.root.current = "master_list"

            Widget:

            Button:
                text: 'Cancel'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_press: app.root.current = "master_list"
        