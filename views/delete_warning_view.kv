#:kivy 1.0

<DeleteWarningView>:
    BoxLayout:
        orientation: 'vertical'

        HeaderBox:
            orientation: 'vertical'

            TitleLabel:
                text: "Delete Task"

        BodyBox:
            orientation: 'vertical'

            Label:
                text: "Are you sure you want to delete?"

        FooterBox:
            orientation: 'horizontal'

            Button:
                text: 'Delete'
                on_press: app.root.current = "master_list"

            Button:
                text: 'Cancel'
                on_press: app.root.current = "edit_task"
        